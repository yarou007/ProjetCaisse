@{
    ViewData["Title"] = "Accueil";
}

<div class="container mt-5 text-center">
    <h2 class="mb-3">Bienvenue sur le portail de gestion <span class="text-primary">BonApp</span></h2>
    <p class="lead">Accédez rapidement aux fonctionnalités principales de votre restaurant/café.</p>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-3 mb-3">
                <a href="/Caisse" class="btn btn-success w-100 py-3">
                    <i class="bi bi-cash-coin"></i> Caisse
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a href="/Product" class="btn btn-primary w-100 py-3">
                    <i class="bi bi-box-seam"></i> Produits
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a href="/Dashboard" class="btn btn-warning w-100 py-3">
                    <i class="bi bi-bar-chart-line"></i> Dashboard
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-3 mb-3">
                <a asp-action="AccessDenied" asp-controller="Account" class="btn btn-success w-100 py-3">
                    <i class="bi bi-cash-coin"></i> Caisse
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a asp-action="AccessDenied" asp-controller="Account" class="btn btn-primary w-100 py-3">
                    <i class="bi bi-box-seam"></i> Produits
                </a>
            </div>
            <div class="col-md-3 mb-3">
                <a asp-action="AccessDenied" asp-controller="Account" class="btn btn-warning w-100 py-3">
                    <i class="bi bi-bar-chart-line"></i> Dashboard
                </a>
            </div>
        </div>
    }
</div>