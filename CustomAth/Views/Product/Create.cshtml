@{
    ViewData["Title"] = "Add Products";
}

@model CustomAth.Models.Product;


<form asp-action="Add" method="POST" >
    <h2>Add Product</h2>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input asp-for="ProductName" type="text" name="ProductName" class="form-control" ></input>
    </div>
    <div class="mt-3">
        <label class="form-label">Product Quantity</label>
        <input asp-for="ProductQuantity" type="text" name="ProductQuantity" class="form-control" ></input>
    </div>
    <div class="mt-3">
        <label class="form-label">Product Price</label>
        <input asp-for="ProductUnitPrice" type="text" name="ProductUnitPrice" class="form-control" ></input>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <div class="mt-3">
        <button
            type="submit" name="submit" class="btn btn-primary" >Save</button>
    </div>

</form>