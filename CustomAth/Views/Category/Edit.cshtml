@{
    ViewData["Title"] = "Edit Category";
}

@model CustomAth.Models.Category;

<h2>Edit Category</h2>

@if (Model is null)
{
    <p>Category was not found with this id</p>
}
else
{
    
    <form asp-controller="Category" asp-action="Edit" method="POST" >
   
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input asp-for="Id" type="text" name="Id" class="form-control"  readonly hidden/>

        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input asp-for="CategoryName" type="text" name="CategoryName" class="form-control" ></input>
        </div>
        <div class="mt-3">
            <button
                type="submit" name="submit" class="btn btn-primary" >Save</button>
        </div>

    </form>
}
